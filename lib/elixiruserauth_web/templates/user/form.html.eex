<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :username %>
  <%= text_input f, :username, placeholder: "Username..." %>
  <%= error_tag f, :username %>

  <%= label f, :email %>
  <%= text_input f, :email %>
  <%= error_tag f, :email %>

  <%= label f, :password %>
  <%= password_input f, :password, placeholder: "Confirm..." %>
  <%= error_tag f, :password %>

  <%= label f, :password_conf %>
  <%= password_input f, :password_conf, placeholder: "Confirm password..." %>
  <%= error_tag f, :password_conf %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
